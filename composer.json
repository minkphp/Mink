{
    "name":         "behat/mink",
    "description":  "Web acceptance testing framework for PHP 5.3",
    "keywords":     ["web", "testing", "browser"],
    "homepage":     "http://mink.behat.org/",
    "type":         "library",
    "license":      "MIT",

    "authors": [
        {
            "name":      "Konstantin Kudryashov",
            "email":     "ever.zet@gmail.com",
            "homepage":  "http://everzet.com"
        }
    ],

    "require": {
        "php":                   ">=5.3.1",
        "symfony/browser-kit":   ">=2.0.0,<2.2.0-dev",
        "symfony/dom-crawler":   ">=2.0.0,<2.2.0-dev",
        "symfony/css-selector":  ">=2.0.0,<2.2.0-dev",
        "symfony/finder":        ">=2.0.0,<2.2.0-dev",
        "symfony/process":       ">=2.1.0,<2.2.0-dev"
    },

    "require-dev": {
        "fabpot/goutte":                 "1.0.x-dev",
        "behat/sahi-client":             ">=1.0.1,<1.1-dev",
        "instaclick/php-webdriver":      "*",
        "alexandresalome/php-selenium":  "*"
    },

    "suggest": {
        "fabpot/goutte":                 "to enable GoutteDriver",
        "behat/sahi-client":             "to enable SahiDriver",
        "alexandresalome/php-selenium":  "to enable SeleniumDriver",
        "facebook/php-webdriver":        "to enable Selenium2Driver"
    },

    "autoload": {
        "psr-0": {
            "Behat\\Mink": "src/"
        }
    },

    "repositories": {
        "behat/mink-deps": {
            "type": "composer",
            "url":  "behat.org"
        }
    }
}
